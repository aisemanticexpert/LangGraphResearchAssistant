# LangGraph Research Assistant Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API KEYS (Required)
# =============================================================================

# Required: Anthropic API Key for Claude LLM
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Tavily Search API Key (for real-time web search)
# Get your API key from: https://tavily.com/
# When provided and USE_MOCK_DATA=false, enables real-time web search
TAVILY_API_KEY=your_tavily_api_key_here

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Available models: claude-sonnet-4-20250514, claude-3-5-sonnet-latest, claude-3-haiku-20240307
DEFAULT_MODEL=claude-sonnet-4-20250514
TEMPERATURE=0.0

# =============================================================================
# RESEARCH SETTINGS
# =============================================================================

# Set USE_MOCK_DATA=false to use Tavily Search API for real-time research
# Mock data includes 25+ companies: Apple, Tesla, Microsoft, Google, Amazon,
# Meta, NVIDIA, Netflix, AMD, Intel, Salesforce, Oracle, Adobe, JPMorgan,
# Visa, PayPal, Square, Pfizer, J&J, UnitedHealth, Walmart, Costco, Nike,
# Starbucks, Toyota, Ford, Disney, Spotify
USE_MOCK_DATA=true
MAX_RESEARCH_ATTEMPTS=3
CONFIDENCE_THRESHOLD=6.0

# =============================================================================
# PERSISTENCE SETTINGS
# =============================================================================

# Checkpoint Backend: memory (default), sqlite, postgres
CHECKPOINT_BACKEND=memory

# SQLite settings (when CHECKPOINT_BACKEND=sqlite)
SQLITE_PATH=data/checkpoints.db

# PostgreSQL settings (when CHECKPOINT_BACKEND=postgres)
# POSTGRES_URL=postgresql://user:password@localhost:5432/research_assistant

# =============================================================================
# CACHING SETTINGS
# =============================================================================

# Enable/disable response caching for duplicate queries
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=100

# =============================================================================
# LOGGING SETTINGS
# =============================================================================

LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE_PATH=logs/research_assistant.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# API SERVER SETTINGS (FastAPI)
# =============================================================================

API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# =============================================================================
# EXPORT SETTINGS
# =============================================================================

EXPORT_DIR=exports

# =============================================================================
# STREAMING SETTINGS
# =============================================================================

ENABLE_STREAMING=true
